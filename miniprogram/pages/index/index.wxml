<!--pages/index/index.wxml-->
<wxs module="dateUtil" src="../utils/dateUtils.wxs"></wxs>
<view class="page__bd">
	<view class="weui-navigation-bar">
		<view class="weui-navigation-bar__placeholder" style="visible: hidden;"></view>
		<view class="weui-navigation-bar__inner" style="padding-right: 0px;width: 100%;background-color: white;">

			<view class='weui-navigation-bar__left' bindtap="reduceChangeDate" style="width: auto;">
				<view style="padding-left: 4pt;"><text decode="true">&lt; 前一天</text></view>
			</view>

			<view class='weui-navigation-bar__center'>
				<picker mode="date" value="{{date}}" bindchange="bindDateChange">
					<view class="weui-input">{{date}}</view>
					<view class="weui-input">{{week}}</view>
				</picker>
			</view>

			<view class='weui-navigation-bar__right' style="margin-right: 20px;" bindtap="addChangeDate">
				<view><text decode="true">后一天 &gt;</text></view>
			</view>
		</view>
	</view>
</view>

<view wx:for="{{room}}" wx:for-index="roomIndex" wx:for-item="roomItem" wx:key="id">
	<view class="weui-cells__title">{{roomItem.roomName}}</view>
	<view class="weui-cells">
		<navigator wx:for="{{meeting}}" wx:for-index="meetingIndex" wx:for-item="meetingItem" wx:key="id"
			wx:if="{{roomItem.roomName == meetingItem.roomName}}" url="../meetinginfo/meetinginfo?mid={{meetingItem.id}}"
			class="weui-cell weui-cell_access navigator">
			<view class="weui-cell__bd">
				<view>
					{{dateUtil.formatMinute(meetingItem.startTime,'hh:mm')}}-{{dateUtil.formatMinute(meetingItem.endTime,'hh:mm')}}
				</view>
			</view>
			<view class="weui-cell__bd">{{meetingItem.name}}</view>
			<view class="weui-cell__ft"></view>
		</navigator>
	</view>

</view>



